<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Events.RegistrationEvent"
    tools:showIn="@layout/activity_registration_event">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="visible">


        <EditText
            android:id="@+id/ERName"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="name"
            android:inputType="text"
            android:textColorHint="@color/common_google_signin_btn_text_light_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/ERdescription"
            android:layout_width="364dp"
            android:layout_height="124dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ERdate"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="date"
            android:inputType="date"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ERtime"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="time"
            android:inputType="time"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ERcity"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="city"
            android:inputType="text"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ERadress"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="address"
            android:inputType="text"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ERmail"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="textEmailAddress"
            android:hint="e-mail"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"/>

        <EditText
            android:id="@+id/ERphone"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="phone"
            android:hint="phone number"
            android:textColorHint="@color/common_google_signin_btn_text_dark_disabled"/>

        <Button
            android:id="@+id/ERaddEvent"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            android:onClick="createEvent"
            android:text="Button" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="364dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="56dp"
            tools:srcCompat="@tools:sample/avatars" />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>